//process.container = "mgimenez720/plaSquid:latest"

profiles {
	conda {
      process.conda = "$baseDir/environments/plaSquid.yml"
	  conda.cacheDir = "$baseDir/"
	}

	docker {
		docker.enabled = true
		docker.temp = 'auto'
	}

	singularity {
		singularity.enabled = true
		singularity.autoMounts = true
	}

	podman {
		podman.enabled = true
	}


	standard {
		report.enabled = true 
		docker.enabled = true
		withLabel: small_cpus {
			  cpus = 2
		  }
		  withLabel: small_mem {
			  memory = 2.Gb
			  maxForks = 1
		  }
		  withLabel: big_cpus {
			  cpus = 6
		  }
		  withLabel: big_mem {
			  memory = 16.Gb
			  maxForks = 1
		  }
		  withName: Mapping_pr {
			  memory = 6.Gb
			  cpus = 3
			  maxForks = 1
		  }
	}

	test { includeConfig 'conf/test.config'}
	server {includeConfig 'conf/server.config'}
}
